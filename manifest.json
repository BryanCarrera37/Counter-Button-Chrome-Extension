{
    "manifest_version": 3,
    "name": "Counter Button",
    "description": "An extension where you can see how many times you clicked on a button",
    "version": "1.0.0",
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "type": "module"
    },
    "icons": {
        "48": "assets/image.png"
    },
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}